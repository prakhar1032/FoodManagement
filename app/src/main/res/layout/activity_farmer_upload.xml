<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".farmer.FarmerUpload">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarfarmerback"></include>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Upload Goods"
        android:textColor="#046E09"
        android:textSize="20pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <EditText
        android:id="@+id/name"
        android:layout_width="242dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Enter goods name"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#93AF7A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/qty"
        android:layout_width="239dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Enter Quantity"
        android:inputType="number"
        android:textColor="#040404"
        android:textColorHint="#93AF7A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.117" />

    <EditText
        android:id="@+id/price"
        android:layout_width="244dp"
        android:layout_height="51dp"
        android:layout_below="@+id/qty"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Enter price"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#93AF7A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qty"
        app:layout_constraintVertical_bias="0.156" />

    <Button
        android:id="@+id/btndone"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:textSize="30sp"
        app:backgroundTint="#4B9E06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintVertical_bias="0.333" />

</androidx.constraintlayout.widget.ConstraintLayout>